<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5sp"
        android:background="@color/teal_200"
        >
<!--        android:background="@drawable/bg_spinner">-->

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_marginStart="10dp">
                <!-- Musteri ID-->
                <TextView
                    android:id="@+id/musteriIdLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:text="Müşteri ID:"
                    android:textColor="@android:color/black"
                    android:textSize="15sp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/musteriID"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/musteriIdLabel"
                    android:layout_alignTop="@id/musteriIdLabel"
                    android:text="00090"
                    android:textColor="@color/colorPrimaryText" />

                <!-- Tarih -->
                <TextView
                    android:id="@+id/musteriAdiLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/musteriIdLabel"
                    android:layout_marginRight="10dp"
                    android:text="Müşteri Adı :"
                    android:textColor="@android:color/black"
                    android:textSize="15sp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/musteriAdi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/musteriAdiLabel"
                    android:layout_alignTop="@id/musteriAdiLabel"
                    android:text="01.01.2021"
                    android:textColor="@color/colorPrimaryText" />

            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>